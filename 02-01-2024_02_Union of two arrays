class Solution{
    public:
    //Function to return the count of number of elements in union of two arrays.
    int doUnion(int a[], int n, int b[], int m)  {
        int c[200];
        int j=0;
        for(int i=0;i<n;i++) c[i] = a[i];
        for(int i=n;i<m+n;i++) c[i] = b[j++];
        sort(c,c+m+n);
        int count=1;
        for(int i=1;i<m+n;i++)
        {
            if (c[i]!=c[i-1]) count=count+1;
        }
        return count;
    }
};
